<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="usw.app.martin.healthapp.BmiActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Weight"
        android:id="@+id/textViewWeight"
        android:layout_marginTop="85dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarWeight"
        android:max="200"
        android:indeterminate="false"
        android:layout_below="@+id/spinner"
        android:layout_alignEnd="@+id/spinner"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignTop="@+id/textViewWeight"
        android:layout_toEndOf="@+id/textViewWeight"
        android:spinnerMode="dropdown"
        android:layout_alignStart="@+id/textViewHeightDown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Height"
        android:id="@+id/textViewHeight"
        android:layout_below="@+id/textViewValue"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView11" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarHeightUp"
        android:max="250"
        android:indeterminate="false"
        android:layout_below="@+id/textViewHeightUpper2"
        android:layout_alignEnd="@+id/seekBarWeight"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Centimeters"
        android:id="@+id/textViewHeightUpper2"
        android:layout_below="@+id/textViewHeight"
        android:layout_alignEnd="@+id/textViewHeightBottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Inches"
        android:id="@+id/textViewHeightBottom"
        android:layout_below="@+id/textViewHeightUpper"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarHeightBottom"
        android:max="200"
        android:indeterminate="false"
        android:layout_below="@+id/textViewHeightBottom"
        android:layout_alignStart="@+id/textViewHeight"
        android:layout_alignEnd="@+id/seekBarHeightUp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Result:"
        android:id="@+id/textViewResult"
        android:layout_below="@+id/textViewHeightDown"
        android:layout_alignEnd="@+id/textViewHeightBottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Value:"
        android:id="@+id/textViewValue"
        android:layout_below="@+id/seekBarWeight"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/textViewWeightText"
        android:layout_below="@+id/seekBarWeight"
        android:layout_alignEnd="@+id/textViewHeight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Value:"
        android:id="@+id/textView7"
        android:layout_below="@+id/seekBarHeightUp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/textViewHeightUpper"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textViewHeight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Value:"
        android:id="@+id/textView8"
        android:layout_below="@+id/seekBarHeightBottom"
        android:layout_alignStart="@+id/seekBarHeightBottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/textViewHeightDown"
        android:layout_alignTop="@+id/textView8"
        android:layout_toEndOf="@+id/textViewWeight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewResultText"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Age"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarAge"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/spinner"
        android:max="120"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Value:"
        android:id="@+id/textView10"
        android:layout_below="@+id/seekBarAge"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/textViewAge"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toEndOf="@+id/seekBarWeight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/textViewResultValue"
        android:layout_below="@+id/textViewResult"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BMI Index:"
        android:id="@+id/textView11"
        android:layout_below="@+id/textViewResult"
        android:layout_toStartOf="@+id/textViewHeightBottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Category:"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/textViewAgeValue"
        android:layout_below="@+id/seekBarAge"
        android:layout_toEndOf="@+id/textView10" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_alignBottom="@+id/textViewHeight"
        android:layout_alignEnd="@+id/seekBarWeight"
        android:layout_alignTop="@+id/textViewHeight"
        android:layout_toEndOf="@+id/textViewHeightUpper" />

</RelativeLayout>
